		]]>
	</sql>

	<select id="read" parameterClass="java.util.Map" resultMap="componentLoadBalancerResultMap">
		<include refid="selectSql" />
		<![CDATA[
		where
			t1.LOAD_BALANCER_NO = #loadBalancerNo#
		]]>
	</select>

	<select id="readAll" resultMap="componentLoadBalancerResultMap">
