				#loadBalancerNos[]#
			]]>
		</iterate>
	</select>

	<insert id="create" parameterClass="ComponentLoadBalancer">
		<![CDATA[
		insert into COMPONENT_LOAD_BALANCER (
			LOAD_BALANCER_NO, 
