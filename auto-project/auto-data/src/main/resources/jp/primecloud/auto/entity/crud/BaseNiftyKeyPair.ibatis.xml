		]]>
	</select>

	<select id="readByPlatformNo" parameterClass="java.util.Map" resultMap="niftyKeyPairResultMap">
		<include refid="selectSql" />
		<![CDATA[
		where
			t1.PLATFORM_NO = #platformNo#
		]]>
	</select>

	<select id="readInKeyNos" parameterClass="java.util.Map" resultMap="niftyKeyPairResultMap">
		<include refid="selectSql" />
		<![CDATA[
		where
			t1.KEY_NO in
		]]>
		<iterate property="keyNos" open="(" close=")" conjunction=", ">
			<![CDATA[
				#keyNos[]#
			]]>
		</iterate>
	</select>

	<insert id="create" parameterClass="NiftyKeyPair">
		<![CDATA[
		insert into NIFTY_KEY_PAIR (
			KEY_NO,
			USER_NO,
			PLATFORM_NO,
			KEY_NAME,
			PRIVATE_KEY,
			PASSPHRASE
		) values (
			#keyNo#,
			#userNo#,
			#platformNo#,
			#keyName#,
			#privateKey#,
			#passphrase#
		)
		]]>
	</insert>

	<insert id="createAuto" parameterClass="NiftyKeyPair">
		<![CDATA[
		insert into NIFTY_KEY_PAIR (
			KEY_NO,
			USER_NO,
			PLATFORM_NO,
			KEY_NAME,
			PRIVATE_KEY,
			PASSPHRASE
		) values (
			#keyNo#,
			#userNo#,
			#platformNo#,
			#keyName#,
			#privateKey#,
			#passphrase#
		)
		]]>
		<selectKey keyProperty="keyNo" resultClass="java.lang.Long" type="post">
		<![CDATA[
			select last_insert_id()
		]]>
		</selectKey>
	</insert>

	<update id="update" parameterClass="NiftyKeyPair">
		<![CDATA[
		update NIFTY_KEY_PAIR set
			USER_NO = #userNo#,
			PLATFORM_NO = #platformNo#,
			KEY_NAME = #keyName#,
			PRIVATE_KEY = #privateKey#,
			PASSPHRASE = #passphrase#
		where
			KEY_NO = #keyNo#
		]]>
	</update>

	<delete id="delete" parameterClass="NiftyKeyPair">
		<![CDATA[
		delete from NIFTY_KEY_PAIR
		where
			KEY_NO = #keyNo#
		]]>
	</delete>

