<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap
	PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="NiftyKeyPair">

	<typeAlias alias="NiftyKeyPair" type="jp.primecloud.auto.entity.crud.NiftyKeyPair" />

	<resultMap id="niftyKeyPairResultMap" class="NiftyKeyPair">
		<result property="keyNo" column="KEY_NO" />
		<result property="userNo" column="USER_NO" />
		<result property="platformNo" column="PLATFORM_NO" />
		<result property="keyName" column="KEY_NAME" nullValue="" />
		<result property="privateKey" column="PRIVATE_KEY" nullValue="" />
		<result property="passphrase" column="PASSPHRASE" nullValue="" />
	</resultMap>

	<sql id="selectSql">
		<![CDATA[
		select
			t1.KEY_NO as KEY_NO,
			t1.USER_NO as USER_NO,
			t1.PLATFORM_NO as PLATFORM_NO,
			t1.KEY_NAME as KEY_NAME,
			t1.PRIVATE_KEY as PRIVATE_KEY,
			t1.PASSPHRASE as PASSPHRASE
		from
			NIFTY_KEY_PAIR t1
		]]>
	</sql>

	<sql id="countSql">
		<![CDATA[
		select count(*) as COUNT from NIFTY_KEY_PAIR t1
		]]>
	</sql>

	<select id="read" parameterClass="java.util.Map" resultMap="niftyKeyPairResultMap">
		<include refid="selectSql" />
		<![CDATA[
		where
			t1.KEY_NO = #keyNo#
		]]>
	</select>

	<select id="readAll" resultMap="niftyKeyPairResultMap">
		<include refid="selectSql" />
	</select>

	<select id="readByUserNoAndPlatformNoAndKeyName" parameterClass="java.util.Map" resultMap="niftyKeyPairResultMap">
		<include refid="selectSql" />
		<![CDATA[
		where
			t1.USER_NO = #userNo# and
			t1.PLATFORM_NO = #platformNo# and
			t1.KEY_NAME = #keyName#
		]]>
	</select>

	<select id="readByUserNo" parameterClass="java.util.Map" resultMap="niftyKeyPairResultMap">
		<include refid="selectSql" />
		<![CDATA[
		where
			t1.USER_NO = #userNo#
		]]>
	</select>

	<select id="readByUserNoAndPlatformNo" parameterClass="java.util.Map" resultMap="niftyKeyPairResultMap">
		<include refid="selectSql" />
