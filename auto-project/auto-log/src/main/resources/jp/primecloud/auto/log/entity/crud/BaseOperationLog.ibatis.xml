	</insert>

	<update id="update" parameterClass="OperationLog">
		<![CDATA[
		update OPERATION_LOG set
			O_LOG_DATE = #OLogDate#, 
			USER_NO = #userNo#, 
			USER_NAME = #userName#, 
			SCREEN = #screen#, 
			OPERATION = #operation#, 
			FARM_NO = #farmNo#, 
			INSTANCE_NO = #instanceNo#, 
			COMPONENT_NO = #componentNo#, 
			LOAD_BALANCER_NO = #loadBalancerNo#, 
			MEMO = #memo#
		where
