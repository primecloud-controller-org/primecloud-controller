		]]>
	</select>

	<select id="readInOLogNos" parameterClass="java.util.Map" resultMap="operationLogResultMap">
		<include refid="selectSql" />
		<![CDATA[
		where
			t1.O_LOG_NO in
		]]>
		<iterate property="OLogNos" open="(" close=")" conjunction=", ">
			<![CDATA[
				#OLogNos[]#
			]]>
		</iterate>
	</select>

	<insert id="create" parameterClass="OperationLog">
		<![CDATA[
		insert into OPERATION_LOG (
			O_LOG_NO, 
			O_LOG_DATE, 
			USER_NO, 
			USER_NAME, 
			SCREEN, 
			OPERATION, 
			FARM_NO, 
			INSTANCE_NO, 
			COMPONENT_NO, 
			LOAD_BALANCER_NO, 
			MEMO
		) values (
			#OLogNo#, 
			#OLogDate#, 
			#userNo#, 
			#userName#, 
			#screen#, 
			#operation#, 
			#farmNo#, 
			#instanceNo#, 
			#componentNo#, 
			#loadBalancerNo#, 
			#memo#
		)
		]]>
